// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",	
	"tasks": [
		{
			"group": { "kind": "build", "isDefault": true},
			"label": "IncludeJsonFiles",
			"type": "shell",
			"command": "cp src/support/FabricationDefinition.json out/support/FabricationDefinition.json",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn":[ "watch" ]
		},
		{
			"type": "npm",
			"script": "compile",
			"group": "build",			
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": "build"
		}
	]
}
