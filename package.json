{
	"name": "fabcod",
	"displayName": "FabCOD",
	"description": "Fabrication COD Scripting Language Support",
	"version": "0.0.3",
	"license": "MIT",
	"publisher": "agilebim",
	"bugs": {
		"url": "https://github.com/agilebim/fabcod/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/agilebim/fabcod"
	},
	"homepage": "https://github.com/agilebim/fabcod",
	"engines": {
		"vscode": "^1.52.0"
	},
	"keywords": [
		"COD",
		"cadmep",
		"fabrication",
		"autocad"
	],
	"categories": [
		"Programming Languages",
		"Formatters",
		"Snippets"
	],
	"icon": "fabcodlogo.png",
	"main": "./out/extension.js",
	"files": [],
	"activationEvents": [
		"onLanguage:codscript"
	],
	"contributes": {
		"languages": [
			{
				"id": "codscript",
				"aliases": [
					"Fabrication Scripting"
				],
				"extensions": [
					".cod"
				],
				"configuration": "./configurations/codscript-smartBrackets.json"
			}
		],
		"grammars": [
			{
				"language": "codscript",
				"scopeName": "source.codscript",
				"path": "./configurations/codscript-tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "codscript",
				"path": "./configurations/codscript-snippets.json"
			}
		],
		"configurationDefaults": {
			"[codscript]": {
				"files.autoGuessEncoding": true,
				"editor.tabSize": 2,
				"editor.wordBasedSuggestions": false,
				"editor.detectIndentation": true,
				"editor.quickSuggestions": {
					"other": true,
					"comments": false,
					"strings": false
				},
				"editor.snippetSuggestions": "none",
				"editor.autoIndent": "full",
				"editor.formatOnType": true,
				"files.encoding": "utf8",
				"editor.suggest.localityBonus": false,
				"editor.wordSeparators": "<=>&()[]|\".+*/",
				"editor.suggestSelection": "recentlyUsed"
			}
		},
		"keybindings":[
			{
				"when": "resourceLangId == codscript",
				"command": "fabext.dimpicker",
				"key": "Shift+F1"
			},
			{
				"when": "resourceLangId == codscript",
				"command": "fabext.optionpicker",
				"key": "Shift+F2"
			},
			{
				"when": "resourceLangId == codscript",
				"command": "fabext.acadexecute",
				"key": "F5"
			},
			{
				"when": "resourceLangId == codscript",
				"command": "fabext.insertregion",
				"key": "Ctrl+Shift+/"
			}
		],
		"commands": [
			{
				"command": "fabext.dimpicker",
				"category": "FabCOD",
				"title": "CID Dim Name Lookup"
			},
			{
				"command": "fabext.optionpicker",
				"category": "FabCOD",
				"title": "CID Option Name Lookup"
			},
			{
				"command": "fabext.acadexecute",
				"category": "FabCOD",
				"title": "Execute Active Script in ACAD"
			},
			{
				"command": "fabext.insertregion",
				"category": "FabCOD",
				"title": "Insert Folding Region"
			},
			{ "title": "HelloWorld", "command": "cadmepext.helloWorld" } 
		],
		"menus": {
			"view/title": [],
			"view/item/context": [],
			"editor/context": [
				{
					"when": "resourceLangId == codscript",
					"command": "fabext.acadexecute",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == codscript",
					"command": "fabext.insertregion",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == codscript",
					"command": "fabext.dimpicker",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == codscript",
					"command": "fabext.optionpicker",
					"group": "navigation@4"
				}
			],
			"explorer/context": []
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"IncludeJson": "cp src/support/FabricationDefinition.json out/support/FabricationDefinition.json"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.1.0",
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/chai": "^4.2.14",
		"@types/node": "^12.11.7",
		"chai": "^4.2.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"tslint": "6.1.3",
		"del": "^4.1.1",
		"event-stream": "^4.0.1",
		"run-sequence": "^2.2.1",
		"source-map-resolve": "0.6.0"
	},
	"dependencies": {
		"execa": "5.0.0",
		"fs-extra": "9.0.0",
		"os-locale": "5.0.0",
		"vsce": "1.83.0",
		"vscode-languageclient": "7.0.0"
	}
}
